@model ShortenURL.Models.ShortUrl

@{
    ViewData["Title"] = "Create";
}

<h2>Short New URL</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <span>Add the text that fits your purpose or live blank for a random </span>
                <label asp-for="ShorUrl" class="control-label"></label>
                <input asp-for="ShorUrl" class="form-control" />
                <span asp-validation-for="ShorUrl" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="reset" value="Reset" class="btn btn-outline-primary" />&nbsp;
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index" style="text-decoration: none;"><stong>&laquo;&nbsp;</stong>Back to List</a>
</div>

